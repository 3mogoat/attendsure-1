<view class="container">
<view class="login-from">
  <picker class="pick-bg" mode="date" value="{{date}}" bindchange="bindDateChange">
    <view class="picker">
      日期：{{riqi}}
    </view>
  </picker>
  <picker class="pick-bg" bindchange="bindPickerChange" range="{{array}}">
    <view class="picker">
      类型：{{leixing}}
    </view>
  </picker>
  <view class="inputView">
    <label class="loginLab">事件</label>
    <input class="inputText" type="text" placeholder="请输入事件" bindinput="shijianInput"/>
  </view>
  <view class="line"></view>

  <!--按钮-->
  <view class="loginBtnView">
    <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">提交</button>
  </view>
</view>
</view>
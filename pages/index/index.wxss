.container {
  display: flex;
  height: 50vh;
  flex-direction: column;
  overflow: hidden;
  background-color: #fff;
}

.timer_main {
  width: 100vm;
  position: relative;
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: #3197ed;
  transition: all .5s;
  z-index: 1;
  padding: 10px 0;
}

.timer_time-wrap {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200px;
  height: 200px;
  text-align: center;
  transition: all .3s;
}

.timer_progress {
  position: absolute;
  top: 0;
  width: 75px;
  height: 150px;
  overflow: hidden;
  transition: all .3s;
}

.timer_progress_mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  border: 3px solid white;
  opacity: .5;
  border-radius: 50%;
}

.timer_left {
  left: 0;
}

.timer_right {
  right: 0;
}

.timer_circle {
  position: absolute;
  top: 0;
  width: 150px;
  height: 150px;
  border: 3px solid transparent;
  border-radius: 50%;
  transition: all .3s;
}

.timer_circle--left {
  left: 0;
  border-left: 3px solid #fff;
  border-bottom: 3px solid #fff;
  transform: rotate(45deg);
}

.timer_circle--right {
  right: 0;
  border-right: 3px solid #fff;
  border-bottom: 3px solid #fff;
  transform: rotate(-45deg);
}

.timer_time-right {}

.timer_time {
  font-size: 40px;
  color: #fff;
  font-weight: lighter;
  transition: font-size .3s;
}

.timer_taskName {
  position: absolute;
  top: -100px;
  font-size: 14px;
  letter-spacing: 5px;
  color: #fff;
}

.timer_done {
  width: 64px;
  height: 64px;
}

.timer_inputname {
  position: absolute;
  bottom: -10px;
  background-color: white;
  width: 100%;
  text-align: center;
  height: 40px;
  padding-left: 10px;
  border-bottom: 1px solid #f2f2f2;
  color: #999;
}

.timer_footer {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  padding-top: 40px;
  transition: all .3s;
}

.timer .timer_ctrl {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 12px;
  color: #fff;
  width: 80px;
  height: 80px;
  margin: 0 20px;
  border-radius: 50%;
  transition: all .7s;
  background-color: #48c23d;
}

.timer .timer_ctrl text {}


/*runing style*/

.timer--runing .timer_main {
  flex: 1;
}

.timer--runing .timer_time {
  font-size: 45px;
}

.timer--runing .timer_time-wrap {
  width: 200px;
  height: 200px;
}

.timer--runing .timer_progress {
  width: 100px;
  height: 200px;
}

.timer--runing .timer_circle {
  width: 200px;
  height: 200px;
}

.timer--runing .timer_footer {
  flex: 0;
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 10;
}

.timer--runing .timer_ctrl {
  background-color: #208DEA;
  height: 30px;
  margin-bottom: 30px;
  border: 1px dashed #dedede;
  border-radius: 20px;
}
/* 行列表 */
.nx_line {
  margin: 20rpx;
}
.nx_line_title {
  padding: 20rpx;
  color: #666;
  font-weight: bold;
  font-size: 35rpx;
  background-color: white;
  border-bottom: 1px solid #eee;
  border-radius: 10rpx 10rpx 0 0;
}
.nx_line_list {
  background-color: white;
  border-radius: 0 0 10rpx 10rpx;
}
.nx_line_list .nx_line_item {
  width: 100%;
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.nx_line_left {
  flex: 2;
  display: flex;
  align-items: center;
}
.nx_line_mid {
  flex: 8;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 40rpx;
}
.nx_line_right {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
}
.nx_line_left image {
  width: 100%;
  height: 100rpx;
}
.nx_line_left text {
  width: 80%;
  margin-left: 20rpx;
  color: #666;
}
.nx_line_item_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-weight: bold;
  font-size: 32rpx;
}
.text{
  background-color: white;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}